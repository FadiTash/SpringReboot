doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport",content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title My Site
    link(href="../bootstrap/bootstrap.css", rel="stylesheet")
  body
    div(class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm")
        h5(class="my-0 mr-md-auto font-weight-normal") Company name
        nav(class="my-2 my-md-0 mr-md-3")
            a(class="p-2 text-dark", href="#") Features
            a(class="p-2 text-dark", href="#") Enterprise
            a(class="p-2 text-dark", href="#") Support
            a(class="p-2 text-dark", href="#") Pricing
        a(class="btn btn-outline-primary" href="#") Sign up
    
    div(class="d-flex flex-row flex-md-row align-items-center px-md-4 mb-3 bg-white border-bottom shadow-sm")
        block content
    div(class="d-flex flex-column flex-md-row align-items-center px-md-4 mb-3 bg-white border-bottom shadow-sm")
        include footer
    script(src="../jquery.js")
    script(src="../bootstrap/bootstrap.js")